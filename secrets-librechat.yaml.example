---
apiVersion: v1
kind: Secret
metadata:
  name: librechat-credentials-env
  namespace: librechat  # Change this to your namespace
type: Opaque
stringData:
  # Required: LibreChat internal encryption and JWT secrets
  # Generate random secrets using: openssl rand -hex 32
  CREDS_KEY: "REPLACE_WITH_RANDOM_32_BYTE_HEX"
  JWT_SECRET: "REPLACE_WITH_RANDOM_32_BYTE_HEX"
  JWT_REFRESH_SECRET: "REPLACE_WITH_RANDOM_32_BYTE_HEX"

  # Required: Meilisearch master key
  # Generate using: openssl rand -hex 16
  MEILI_MASTER_KEY: "REPLACE_WITH_RANDOM_16_BYTE_HEX"

  # Optional: OpenAI API Key (required if using OpenAI models)
  # Get from: https://platform.openai.com/api-keys
  OPENAI_API_KEY: "sk-REPLACE_WITH_YOUR_OPENAI_KEY"

  # Optional: Other AI provider API keys (uncomment as needed)
  # ANTHROPIC_API_KEY: "sk-ant-REPLACE_WITH_YOUR_KEY"
  # GOOGLE_API_KEY: "REPLACE_WITH_YOUR_KEY"
  # AZURE_OPENAI_API_KEY: "REPLACE_WITH_YOUR_KEY"

  # Default user credentials (used by user-init-job.yaml if CREATE_USER=true)
  DEFAULT_USER_NAME: "Admin User"
  DEFAULT_USER_EMAIL: "admin@example.com"
  DEFAULT_USER_PASSWORD: "ChangeMe123!"
